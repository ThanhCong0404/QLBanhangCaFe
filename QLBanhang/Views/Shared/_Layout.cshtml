        <script src="/Content/_LayOut/js/main.js"></script>

        @RenderSection("scripts", required: false)

    </div>

    <header id="fh5co-header" class="fh5co-cover js-fullheight" role="banner" style="background-image: url(/Content/_LayOut/images/hero_1.jpeg);" data-stellar-background-ratio="0.5">
