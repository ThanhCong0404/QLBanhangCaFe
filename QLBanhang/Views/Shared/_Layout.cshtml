<body>

    <div class="fh5co-loader"></div>

    <div id="page">
        <nav class="fh5co-nav" role="navigation">
            <!-- <div class="top-menu"> -->
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 text-center logo-wrap">
                        <div id="fh5co-logo"><a href="@Url.Action("Index","Home")">Website Kinh Doanh Cafe<span>.</span></a></div>
                    </div>
                    <div class="col-xs-12 text-center menu-1 menu-wrap">
                        <ul>
                            <li class="active"><a href="@Url.Action("Index","Home")">Home</a></li>

                            <li class="has-dropdown">
                                <a data-toggle="dropdown" href="#">
                                    Loại Sản Phẩm
                                    <span class="caret"></span>
                                </a>


                                <ul class="dropdown">
                                    @foreach (var item in (List<QLBanhang.Models.LoaiSP>)Session["Category"])
                                    {
                                        <li><a href="@Url.Action("index", "Home", new {maloaisp = item.MaLoaiSP })">@item.TenLoaiSP</a></li>

                                    }

                                </ul>
                            </li>

                            <li>
                                @Html.Partial("~/Views/Shared/GioHangPartial.cshtml")
                            </li>
                            <li><a href=""</a></li>

                            @if (Session["user"] == null && Session["nhanvien"]==null)
                            {
                                <li><a href="@Url.Action("Register","Home")">Đăng Ký</a></li>

                                <li><a href="@Url.Action("Login","Home")">Đăng Nhập</a></li>
                            }
                            else if (Session["user"] != null)
                            {
                                var user = (QLBanhang.Models.KhachHang)Session["user"];
                                <li class="has-dropdown">
                                    <a data-toggle="dropdown" href="#">
                                        Xin chào :  @user.TenKH
                                        <span class="caret"></span>
                                    </a>


                                    <ul class="dropdown">
                                        <li><a href="@Url.Action("EditfromKhachHang", "KhachHangs", new {id = user.MaKH })">Thay đổi thông tin tài khoản</a></li>
                                        <hr />
                                        <li><a href="@Url.Action("Logout", "Home", new {id = user.MaKH })"> LogOut !</a></li>

                                    </ul>
                                </li>
                            }
                            else if (Session["nhanvien"] != null)
                            {

                                <li><a href="@Url.Action("index","KhachHangs")">Khách Hàng</a></li>
                                <li><a href="@Url.Action("index","HoaDons")">Hóa Đơn</a></li>
                                <li><a href="@Url.Action("index","SanPhams")">Quản Lý Sản Phẩm</a></li>


                                var user = (QLBanhang.Models.Nhanvien)Session["nhanvien"];
                                <li class="has-dropdown">
                                    <a class="" data-toggle="dropdown" href="#">
                                        Xin chào :  @user.Ten
                                        <span class="caret"></span>
                                    </a>

                                   


                                    <ul class="dropdown">
                                        <li><a href="@Url.Action("Edit", "NhanViens", new {id = user.MaNV })">Thay đổi thông tin tài khoản</a></li>
                                        <hr />
                                        
                                        <li><a href="@Url.Action("Logout", "Home")"> LogOut !</a></li>

                                    </ul>
                                    @if (user.isAdmin == true)
                                        {
                                             <li><a class="btn btn-warning" href="/Admin/">ADMIN</a></li>
                                            
                                        }
                                </li>
                            }


                        </ul>
                    </div>
                </div>


            </div>


            <!-- </div> -->
        </nav>




        <!-- jQuery -->
        <script src="/Content/_LayOut/js/jquery.min.js"></script>
        <!-- jQuery Easing -->
        <script src="/Content/_LayOut/js/jquery.easing.1.3.js"></script>
        <!-- Bootstrap -->
