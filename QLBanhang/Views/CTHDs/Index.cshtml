        <tr>
            <th>Số TT</th>
            <th>Tên SP</th>
            <th>Đơn vị tính</th>
            <th>Số lượng</th>
            <th>Đơn giá </th>
            <th>Thành tiền</th>
        </tr>
        @{ 
            double tongtien = 0;
            int i = 0;
        }
        @foreach (var item in ViewBag.Sub)
        {
            i++;
            tongtien += (Convert.ToDouble(@item.CTHD.soluong) * Convert.ToDouble(@item.CTHD.DongiaBna));
            <tr>
                  <td>@i</td>
                  <td>@item.Sanpham.TenSP</td>
                  <td>@item.Sanpham.Donvitinh</td>
                  <td>@item.CTHD.Soluong</td>
                  <td>@string.Format("{0:0,##0}",item.CTHD.Dongiaban)</td>
                  <td>@string.Format("{0:0,##0}", item.Thanhtien.Dongiaban)</td>

            </tr>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td>Tong Tien:</td>
                <td><text>@string.Format("{0:0,##0}",tongtien)</text></td>
            </tr>
        }
    </table>
